@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}
<style>
    .image-button {
        border: none;
        padding: 0;
        background: none;
        cursor: pointer;
    }
</style>

<div class="documents">
    <div class="document-tools">
         <button class="document-add" type="submit">Add document</button>
        <div class="document-search">
            <form method="post">
                <input class="document-search-input" type="search" placeholder="Search" name="searchString" value="@Model.SearchString">
            </form>            
        </div>                   
    </div>
    <table class="document-list">
        <tr>
            <th>Name</th>
            <th>By</th>
            <th>Added</th>
            <th></th>
            <th></th>
        </tr>
        @if (Model.DocumentsList == null || Model.DocumentsList.Count() == 0)
        {
            <tr>
                <td colspan="5">No documents available.</td>
            </tr> 
        }
        else
        {
            foreach (var item in Model.DocumentsList)
            {
                <tr>
                    <td><a>@item.FileName</a></td>
                    <td>@item.UploadedBy.FirstName @item.UploadedBy.LastName</td>
                    <td>@item.UploadedDate</td>
                    <td>
                        <form method="post" asp-page-handler="DeleteDocument" asp-route-documentId="@item.Id">
                            <button type="submit" class="image-button">
                                <img alt="Delete" src="data:image/svg+xml;base64,"> <!-- Your base64 SVG data here -->
                            </button>
                        </form>
                    </td>

                    <td>
                        <a asp-page="/EditDocument" asp-route-documentId="@item.Id">
                            <button type="submit" class="image-button">
                                <img alt="Edit" src="data:image/svg+xml;base64,"> <!-- Your base64 SVG data here -->
                            </button>
                        </a>
                    </td>
                </tr>        
            }                
        }
     </table>
</div>

