@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="documents">
    <div class="document-tools">
        <button class="document-add">Add document</button>
        <div class="document-search">
            <form method="post">
                <input class="document-search-input" type="search" placeholder="Search" name="searchString" value="@Model.SearchString">
            </form>            
        </div>                   
    </div>
    <table class="document-list">
        <tr>
            <th>Name</th>
            <th>By</th>
            <th>Added</th>
            <th></th>
            <th></th>
        </tr>
        @if (Model.DocumentsList == null || Model.DocumentsList.Count() == 0)
        {
            <tr>
                <td colspan="5">No documents available.</td>
            </tr> 
        }
        else
        {
            foreach (var item in Model.DocumentsList)
            {
                <tr>
                    <td><a>@item.FileName</a></td>
                    <td>@item.UploadedBy.FirstName @item.UploadedBy.LastName</td>
                    <td>@item.UploadedDate</td>
                    <td><img alt="Delete"
                            src="data:image/svg+xml;base64,">
                    </td>
                    <td><img alt="Edit"
                            src="data:image/svg+xml;base64,">
                    </td>
                </tr>        
            }                
        }
     </table>
</div>
