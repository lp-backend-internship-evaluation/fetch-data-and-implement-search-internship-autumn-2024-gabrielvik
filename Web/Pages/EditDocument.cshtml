@page
@model EditDocumentModel
@{
    ViewData["Title"] = "Edit Document";
}

<h1>Edit Document</h1>

<form method="post" asp-page-handler="UpdateDocument" asp-route-documentId="@Model.Document.Id">
    <label for="fileName">File Name:</label>
    <input type="text" id="fileName" name="fileName" value="@Model.Document.FileName" required>
    <br>

    <button type="submit">Save Changes</button>
</form>